<%= form_for :user, :url => {:controller => 'sessions', :action => 'create'} do |f| %>
  
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.check_box :remember_me %>
  <%= f.label :remember_me %>
  
  <%= f.submit 'Sign In' %>
<% end %>